{
  "name": "@tinijs/vipman",
  "version": "0.5.0",
  "description": "Verion, interlink and publication manager of the TiniJS project.",
  "author": "Lam Nhan",
  "homepage": "https://tinijs.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinijs/vipman.git"
  },
  "bugs": {
    "url": "https://github.com/tinijs/vipman/issues"
  },
  "scripts": {
    "build:1:cli": "npm run build-script -- ../cli",
    "publish:1:cli": "cd ../cli && npm publish --access public",
    "build:2:core": "npm run build-script -- ../core",
    "publish:2:core": "cd ../core && npm publish --access public",
    "build:3:router": "npm run build-script -- ../router",
    "publish:3:router": "cd ../router && npm publish --access public",
    "build:4:store": "npm run build-script -- ../store",
    "publish:4:store": "cd ../store && npm publish --access public",
    "build:5:meta": "npm run build-script -- ../meta",
    "publish:5:meta": "cd ../meta && npm publish --access public",
    "build:6:pwa": "npm run build-script -- ../pwa",
    "publish:6:pwa": "cd ../pwa && npm publish --access public",
    "build:7:toolbox": "npm run build-script -- ../toolbox",
    "publish:7:toolbox": "cd ../toolbox && npm publish --access public",
    "build:8:ui": "npm run build-script -- ../ui",
    "publish:8:ui": "cd ../ui && npm run publish",
    "build:9:skeleton": "npm run build-script -- ../skeleton",
    "publish:9:skeleton": "echo 'No NPM publish for skeleton'",
    "build:10:ui-skeleton": "npm run build-script -- ../ui-skeleton",
    "publish:10:ui-skeleton": "echo 'No NPM publish for ui-skeleton'",
    "build:11:icons": "npm run build-script -- ../icons",
    "publish:11:icons": "echo 'Icons packages are published individually'",
    "build-script": "ts-node src/build.ts",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.8",
    "gts": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6"
  }
}
